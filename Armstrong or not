# Q. Check if number is Armstrong or Not
# i/p : n=153, 1**3 + 5**3 + 3**3 = 153
# o/p : Yes

def armstrongOrNot(n):
    size = len(str(n))
    arm = 0
    temp = n
    while temp > 0:
        rem = temp%10
        arm +=  rem**size
        temp = temp//10
        print('---------',arm)
    if arm == n:
        return ("Armstrong")
    else:
        return ("Not Armstrong")

n = 153
print(armstrongOrNot(n))
